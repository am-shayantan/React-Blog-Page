<%-include('./partials/top.ejs')-%>

    <style>
        .center-div {
            position: absolute;
            margin: auto;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            width: 300px;
            height: 100px;
            border-radius: 3px;
        }
    </style>

    <form class="form-inline center-div" method='POST' action='/authenticate?<%=query%>'>
        <div class="form-group mx-sm-3 mb-2">
            <label for="inputPassword" class="sr-only">Password</label>
            <input 
                type="password" 
                name="password" 
                class="form-control" 
                id="inputPassword" 
                placeholder="Password"
            >
        </div>
        <center><button type="submit" class="btn btn-primary mb-2">Confirm identity</button></center>
    </form>

    <% if(warning){ %>
        <script>
            alert('Incorrect Password')
        </script>
    <% } %>

<%-include('./partials/bottom.ejs')-%>